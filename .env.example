# Database 
DB_URL=postgresql://postgres:postgres@localhost:5432/trading
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600
DB_ECHO=false

# Application
APP_NAME="Trading API"
APP_VERSION="1.0.0"
ENVIRONMENT=development
DEBUG=true

# API
API_PREFIX=/api
API_V1_PREFIX=/api/v1

# Logging
LOG_LEVEL=INFO

# CORS (comma-separated for multiple origins)
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# Scheduler
SCHEDULER_ENABLED=true
SCHEDULER_TIMEZONE=America/Argentina/Buenos_Aires

# IOL Broker Credentials (required but not used in development with FakeBroker)
IOL_USERNAME=your-iol-username
IOL_PASSWORD=your-iol-password
